{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": "on the first day of the week before 12th hour",
  "timezone": "Europe/Zagreb",
  "groupName": "all",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": true,
  },
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": [
        "*"
      ]
    }
  ],
  "separateMajorMinor": true
}
